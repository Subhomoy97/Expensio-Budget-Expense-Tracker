<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>User Details</title>

  <link rel="icon" href="/img/logo.png" type="image/png">
  <!-- Bootstrap -->
  <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
  <link href="/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body id="page-top">

  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('../layout/sidebar') %>
    <!-- End of Sidebar -->

    <div id="content-wrapper" class="d-flex flex-column">
      <div id="content">

        <!-- Topbar -->
        <%- include('../layout/topbar') %>
        <!-- End of Topbar -->

        <div class="container-fluid">
          <h1 class="h3 mb-4 text-gray-800">User Details</h1>

          <div class="row">
            <div class="col-md-4">
              <div class="card shadow mb-4">
                <div class="card-body text-center">
                  <% if (profilePic) { %>
                    <img src="/uploads/profile/<%= profilePic %>" class="img-fluid rounded-circle mb-3" style="width: 150px;" alt="Profile Picture">
                  <% } else { %>
                    <img src="/uploads/profile/default.jpg" class="img-fluid rounded-circle mb-3" style="width: 150px;" alt="Default Picture">
                  <% } %>
                  <h5 class="card-title"><%= user.firstName %> <%= user.lastName %></h5>
                  <p class="card-text"><%= user.email %></p>
                  <p>
                    Verified:
                    <span class="badge <%= user.isVerified ? 'badge-success' : 'badge-warning' %>">
                      <%= user.isVerified ? 'Yes' : 'No' %>
                    </span>
                  </p>
                  <p>
                    Deleted:
                    <span class="badge <%= user.isDeleted ? 'badge-danger' : 'badge-success' %>">
                      <%= user.isDeleted ? 'Yes' : 'No' %>
                    </span>
                  </p>
                </div>
              </div>
            </div>

            <div class="col-md-8">
              <div class="card shadow mb-4">
                <div class="card-header">
                  <h6 class="m-0 font-weight-bold text-primary">Profile Information</h6>
                </div>
                <div class="card-body">
                  <% if (profile) { %>
                    <p><strong>Full Name:</strong> <%= profile.fullname %></p>
                    <p><strong>Phone:</strong> <%= profile.phone %></p>
                    <p><strong>Address:</strong> <%= profile.address %></p>
                  <% } else { %>
                    <p class="text-danger">Profile not created.</p>
                  <% } %>

                  <hr>
                  <p><strong>Account Created At:</strong> <%= new Date(user.createdAt).toLocaleString() %></p>
                  <p><strong>Last Updated At:</strong> <%= new Date(user.updatedAt).toLocaleString() %></p>
                </div>
              </div>
            </div>
          </div>

          <a href="/admin/users" class="btn btn-secondary">Back to Users</a>

        </div>
      </div>

      <!-- Footer -->
      <%- include('../layout/footer') %>

    </div>
  </div>

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- JavaScript -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/js/sb-admin-2.min.js"></script>
</body>
</html>
